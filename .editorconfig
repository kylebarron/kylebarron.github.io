# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

# Files with two-space indent
[*.{js,jsx,ts,tsx,yml,json,mdx}]
indent_size = 2

# Tab indentation
[Makefile]
indent_style = tab
